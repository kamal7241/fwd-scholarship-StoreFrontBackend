{
  "name": "storefront_backend",
  "version": "0.1.0",
  "description": "",
  "main": "server.ts",
  "scripts": {
    "watch": "tsc-watch --esModuleInterop src/server.ts --outDir ./dist --onSuccess 'node ./dist/server.js'",
    "tsc": "tsc",
    "test": "set NODE_ENV=production && npm run build && npx jasmine",
    "build": " npx tsc ",
    "start-build": "npx tsc && set NODE_ENV=production && nodemon dist ",
    "start": "set NODE_ENV=development && nodemon src/server.ts",
    "prettier": "prettier --write ./**/*.ts ",
    "eslint-config": "npm init @eslint/config",
    "eslint": "nodemon --exec npx eslint ./**/*.ts --ext .js --ext .ts",
    "debug": "set NODE_ENV=development && nodemon --watch src/**/* -e ts,json --exec node --inspect-brk -r ts-node/register src/**/*"
  },
  "author": "kamal korney Mohamed",
  "license": "ISC",
  "dependencies": {
    "@types/dotenv": "^8.2.0",
    "body-parser": "^1.19.0",
    "dotenv": "^16.0.0",
    "express": "^4.17.1",
    "pg": "^8.7.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jasmine": "^3.10.3",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.17",
    "@types/nodemon": "^1.19.1",
    "@types/pg": "^8.6.4",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "db-migrate-pg": "^1.2.2",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jasmine": "^4.0.2",
    "jasmine-spec-reporter": "^7.0.0",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "supertest": "^6.2.2",
    "ts-node": "^10.5.0",
    "tsc-watch": "^4.2.9",
    "typescript": "^4.5.5"
  }
}
